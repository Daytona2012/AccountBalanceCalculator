package chester.presentation;

public class Console {

	
	public static boolean compare (double balance, double amount) {
		
		if (balance >= amount) {
			
			return true;
			
		} else {
			
			System.out.println("Not enough balance in the account");
			return false;
			
		}
	}
	
	public static boolean check(double amount) {
		
		if (amount > 0) {
			return true;
			
		} else {
			
			System.out.println("The amount should be positive");
			return false;
		}
	}
}
